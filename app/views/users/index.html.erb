<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= link_to "Show", user %></td>
        <% if current_user.try :admin? %>
          <td><%= link_to "Edit", edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.try :admin? %>
  <p><%= link_to "New user", new_user_path %></p>
<% end %>
